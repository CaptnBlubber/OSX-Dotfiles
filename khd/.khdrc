# toggle split mode
lalt - s : kwmc window -c split-mode toggle

#lalt - v : kwmc display -c vertical
#lalt - h : kwmc display -c horizontal


# toggle fullscreen
lalt - f : kwmc window -z fullscreen

# Give Focus To Screen
lalt - 1            :    kwmc space -fExperimental 1
lalt - 2            :    kwmc space -fExperimental 2
lalt - 3            :    kwmc space -fExperimental 3
lalt - 4            :    kwmc space -fExperimental 4
lalt - 5            :    kwmc space -fExperimental 5
lalt - 6            :    kwmc space -fExperimental 6
lalt - 7            :    kwmc space -fExperimental 7
lalt - 8            :    kwmc space -fExperimental 8
lalt - 9            :    kwmc space -fExperimental 9

## Shift focus
lalt - l    :   kwmc window -f north
lalt - j    :   kwmc window -f east
lalt - k    :   kwmc window -f south
lalt - 0xf6    :   kwmc window -f west

## Swap position
lalt + shift - l    :   kwmc window -s north
lalt + shift - j    :   kwmc window -s east
lalt + shift - k    :   kwmc window -s south
lalt + shift - 0xf6    :   kwmc window -s west

# Move Focused Window To Screen
lalt + shift - 1 :    kwmc window -m space 1
lalt + shift - 2 :    kwmc window -m space 2
lalt + shift - 3 :    kwmc window -m space 3
lalt + shift - 4 :    kwmc window -m space 4
lalt + shift - 5 :    kwmc window -m space 5
lalt + shift - 6 :    kwmc window -m space 6
lalt + shift - 7 :    kwmc window -m space 7
lalt + shift - 8 :    kwmc window -m space 8
lalt + shift - 9 :    kwmc window -m space 9

## Open new terminal window
lalt - return        : open -nb com.googlecode.iterm2

## Reload window layout if broken
#lalt + shift - r   :   brew services restart kwm
#lalt + shift + cmd - r :   brew services restart khd
